<div class="wrapper">
    <div class="container d-flex justify-content-between">
        <div class="hdr-logo my-auto" role="banner">
            <a class="hdr-logo-link" href="{{site.url}}" rel="home">
                <img src="{{ theme.link }}/assets/images/logo.png" alt="Macmillan Education">
            </a>
        </div>
        <div class="tools-area d-flex flex-column">
            <div class="tools-area-row mt-4 d-flex justify-content-center">
                <a href="#" class="corner-btn w-100 mr-1 px-2 py-2 d-flex custom-header"><span class="m-auto">Teacher's corner</span></a>
                <a href="#" class="corner-btn w-100 ml-1 px-2 py-2 d-flex custom-header"><span class="m-auto">Pupil's corner</span></a>
            </div>
            <div class="tools-area-row mt-4 d-flex justify-content-center">
                <div class="tool-btn p-2">
                    <span class="icon-search"></span>
                </div>
                <div class="tool-btn p-2">
                    <span class="icon-cart"></span>
                </div>
                <div class="tool-btn p-2">
                    <span class="icon-profile"></span>
                </div>
                {# Advantage #}
                <div class="tool-btn p-2 btn-large position-relative">
                    <span class="icon-advantage c-red"></span>
                </div>
                {# Selector de idioma #}
                <div class="tool-btn p-2 d-flex">
                    <ul class="language-select p-0 m-0">
                        <li class="current">
                            <div class="d-flex">
                                <img src="{{ theme.link }}/assets/images/flag_spain.jpg" class="language-icon" alt="Spanish">
                                ES
                                <span class="icon-down-open"></span>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="{{ theme.link }}/assets/images/flag_england.jpg" class="language-icon" alt="English">
                                ES
                                <span class="icon-down-open"></span>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="{{ theme.link }}/assets/images/flag_france.jpg" class="language-icon" alt="French">
                                ES
                                <span class="icon-down-open"></span>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="{{ theme.link }}/assets/images/flag_germany.jpg" class="language-icon" alt="German">
                                ES
                                <span class="icon-down-open"></span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="menu">
    <div class="container">
        {% block menu %}
            <nav id="nav-main" class="nav-main" role="navigation">
                {% include "menu.twig" with {'menu': menu.header.get_items} %}
            </nav><!-- #nav -->
        {% endblock %}
    </div>
</div>
<div id="submenu" class="d-none position-absolute">
    <div class="container position-relative">
        <div class="bg-grey-l position-absolute">
            <h1 class="p-5">hello</h1>
        </div>
    </div>
</div>