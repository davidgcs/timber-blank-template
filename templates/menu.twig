{% if menu %}
	<ul class="p-0 mb-0">
	{% for item in menu %}
		<li class="{{ item.classes | join(' ') }} d-inline-block py-3">
			<a target="{{ item.target }}" href="{{ item.link }}" class="custom-header text-uppercase {% if loop.first %}pl-0 pt-3 pr-3 pb-3{% elseif loop.last %} pl-3 pt-3 pr-0 pb-3 {% else %}p-3{% endif %}">{{ item.title }}</a>
			{% include "menu.twig" with {'menu': item.get_children} %}
		</li>
	{% endfor %}
	</ul>
{% endif %}
